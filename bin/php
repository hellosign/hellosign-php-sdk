#!/usr/bin/env bash

# Warning: You should run this from rootless Docker (or Podman, or other)

set -e

DIR=$(cd `dirname $0` && pwd)
ROOT_DIR="${DIR}/.."
WORKING_DIR="/app/php"

docker run --rm \
  -v "${ROOT_DIR}:${WORKING_DIR}" \
  -v "hellosign-sdk-composer-cache:/.composer" \
  -w "${WORKING_DIR}" \
  -u root:root \
  jtreminio/php-cli:7.4 "$@"
